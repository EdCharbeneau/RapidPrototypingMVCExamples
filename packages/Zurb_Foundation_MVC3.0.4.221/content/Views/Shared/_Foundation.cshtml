@using Microsoft.Web.Optimization
<!DOCTYPE html>
<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if lt IE 7]> <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="en"> <![endif]-->
<!--[if IE 7]>    <html class="no-js lt-ie9 lt-ie8" lang="en"> <![endif]-->
<!--[if IE 8]>    <html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if gt IE 8]><!-->
<html lang="en">
<!--<![endif]-->
<head>
    <meta charset="utf-8" />
    <!-- Set the viewport width to device width for mobile -->
    <meta name="viewport" content="width=device-width" />
    <title>Welcome to Foundation</title>
    <!-- Included CSS Files -->
    <!-- Combine and Compress These CSS Files -->
    @if (HttpContext.Current.IsDebuggingEnabled)
    {
        <link href="@Url.Content("~/Content/core/globals.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/core/typography.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/core/grid.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/core/ui.css")" rel="stylesheet" type="text/css" />   
        <link href="@Url.Content("~/Content/core/forms.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/core/orbit.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/core/reveal.css")" rel="stylesheet" type="text/css" />
    }
    else
    {
        <link href="@Url.Content("~/Content/core/min.css")" rel="stylesheet" type="text/css" />
    }
    <!-- End Combine and Compress These CSS Files -->
    <link href="@Url.Content("~/Content/mobile.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/app.css")" rel="stylesheet" type="text/css" />
    <!--[if lt IE 9]>
		<link rel="stylesheet" href="@Url.Content("~/Content/ie.css")">
	<![endif]-->
    <!-- IE Fix for HTML5 Tags -->
    <!--[if lt IE 9]>
		<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->
</head>
<body>
    <!-- container -->
    <div class="container">
        @RenderBody()
    </div>
    <!-- container -->
    <!-- Included JS Files -->
    <!-- Combine and Compress These JS Files -->
    @if (HttpContext.Current.IsDebuggingEnabled)
    {
        <script src="@Url.Content("~/Scripts/jquery.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/modernizr.foundation.js")" type="text/javascript"></script>        
        <script src="@Url.Content("~/Scripts/jquery.reveal.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.orbit-1.4.0.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.customforms.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.placeholder.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.tooltips.js")" type="text/javascript"></script>
    }
    else
    {
        <script src="@BundleTable.Bundles.ResolveBundleUrl("~/core.min.js")" type="text/javascript"></script>
    }
    <script src="@Url.Content("~/Scripts/app.js")" type="text/javascript"></script>
    <!-- End Combine and Compress These JS Files -->
    @*Page specific scripts go here*@
    @RenderSection("Scripts",false)
</body>
</html>
