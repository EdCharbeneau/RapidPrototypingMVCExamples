@using Prototyping.Ipsum
@using Prototyping.Placeholdit
@{
    ViewBag.Title = "Session";
}
<div class="row show-on-phones">
<h5>Filter:</h5>
        <select id="mobileNav">
            <option value="#">@Html.Ipsum().Words(2)</option>
            <option value="#">@Html.Ipsum().Words(2)</option>
            <option value="#">@Html.Ipsum().Words(2)</option>
            <option value="#">@Html.Ipsum().Words(2)</option>
            <option value="#">@Html.Ipsum().Words(2)</option>
            <option value="#">@Html.Ipsum().Words(2)</option>
            <option value="#">@Html.Ipsum().Words(2)</option>
            <option value="#">@Html.Ipsum().Words(2)</option>
        </select>
    </div>
<div class="row">
    <div class="three columns hide-on-phones">
        <h5>By Track</h5>
        @Html.Ipsum().dl(links: true, dlAttributes: new { @class = "tabs vertical" })
        <h5>By Day</h5>
        @Html.Ipsum().dl(3, links: true, dlAttributes: new { @class = "tabs vertical" })
    </div>
    <div class="nine columns">
        <div class="row">
            <div class="four columns phone-one">
                @Html.Placehold(300, 400, "Speaker Avatar")<h4><a href="#">@Html.Ipsum().Words(2)</a>
                </h4>
            </div>
            <div class="eight columns phone-three">
                @Html.Ipsum().h3().p(2)
                <p>
                    <a href="#" class="nice large blue radius button" data-reveal-id="rsvpModal">RSVP for
                        this session</a>
                </p>
            </div>
        </div>
        <hr />
        <div class="row">
            <h4>Session Sponsors</h4>
            <div class="row">
                <div class="two columns">
                    @Html.Placehold(120, 160)
                </div>
                <div class="two columns">
                    @Html.Placehold(120, 160)
                </div>
                <div class="two columns">
                    @Html.Placehold(120, 160)
                </div>
                <div class="two columns">
                    @Html.Placehold(120, 160)
                </div>
                <div class="two columns">
                    @Html.Placehold(120, 160)
                </div>
                <div class="two columns">
                    @Html.Placehold(120, 160)
                </div>
            </div>
        </div>
    </div>
</div>
<div id="rsvpModal" class="reveal-modal">
    <h3>Registration Successful</h3><a class="close-reveal-modal">×</a>
</div>
